@model IdentityAss.Models.Person

@{
    ViewBag.Title = "Delete";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Delete !!</h2>

<h4>Are you sure you want to delete this Person?</h4>
<div>
    <table class="table" border="1" >
    <tr>
       <th>First Name</th>
       <th>Last Name</th>
       <th>Address</th>
    </tr>
    <tr>
       <td>@Html.DisplayFor(model => model.FirstName)</td>
       <td>@Html.DisplayFor(model => model.LastName)</td>
       <td>@Html.DisplayFor(model => model.Address)</td>
    </tr>
    </table>
         @using (Html.BeginForm())
         {
                @Html.AntiForgeryToken()

                <div class="form-actions no-color">
                    <input type="submit" value="Delete" class="btn btn-danger" /> |
                    @Html.ActionLink("Back to List", "Index")
                </div>
        }
</div>
